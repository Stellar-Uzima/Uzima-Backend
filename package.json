{
  "name": "uzima-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security:check": "npm audit --audit-level=high",
    "test:api": "npm run pretest:api && newman run postman/Uzima-API.postman_collection.json -e postman/environments/Development.postman_environment.json -r html,json --reporter-html-export test-results/api-test-results.html --bail",
    "test:api:dev": "npm run pretest:api && newman run postman/Uzima-API.postman_collection.json -e postman/environments/Development.postman_environment.json -r html,json --reporter-html-export test-results/api-test-results-dev.html --bail",
    "test:api:staging": "newman run postman/Uzima-API.postman_collection.json -e postman/environments/Staging.postman_environment.json -r html,json --reporter-html-export test-results/api-test-results-staging.html --bail",
    "test:api:prod": "newman run postman/Uzima-API.postman_collection.json -e postman/environments/Production.postman_environment.json -r html,json --reporter-html-export test-results/api-test-results-prod.html --bail --folder 'Smoke Tests'",
    "test:api:all": "npm run test:api:dev && npm run test:api:staging && npm run test:api:prod",
    "pretest:api": "node scripts/api-test-setup.js",
    "posttest:api": "node scripts/parse-newman-report.js || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stellar-Uzima/Uzima-Backend.git"
  },
