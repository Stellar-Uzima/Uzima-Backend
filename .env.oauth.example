# OAuth2 Social Login Configuration
# Copy these variables to your .env file and fill in your actual credentials

# Google OAuth2 Configuration
# Get credentials from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth2 Configuration
# Get credentials from: https://github.com/settings/applications
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# Microsoft OAuth2 Configuration
# Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/auth/microsoft/callback

# OAuth Session Configuration
OAUTH_SESSION_SECRET=your_oauth_session_secret_here_at_least_32_characters
OAUTH_ENCRYPTION_KEY=your_oauth_encryption_key_here_32_bytes_min

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# JWT Configuration (for OAuth tokens)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Node Environment
NODE_ENV=development
